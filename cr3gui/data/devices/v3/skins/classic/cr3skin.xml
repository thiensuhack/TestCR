<?xml version="1.0" encoding="UTF-8"?>
<CR3Skin>
  <scroll id="titlescroll" autohide="true" show-page-numbers="true" location="title"
      pos="-120,0" size="130, 100%" halign="right" valign="center">
      <size minvalue="20,30" maxvalue="0,0"/>
      <leftbutton normal="arrow-left-enabled.png" disabled="arrow-left-disabled.png"/>
      <rightbutton normal="arrow-right-enabled.png" disabled="arrow-right-disabled.png"/>
      <text color="#000000" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="26" bold="true" italic="false" valign="center" halign="center"/>
      <border widths="2,2,2,2"/>
  </scroll>
  <scroll id="menuscroll" autohide="true" show-page-numbers="true">
      <border widths="2,2,2,2"/>
      <background color="#555555"/>
      <leftbutton normal="scroll_arrow_left_enabled.png" disabled="scroll_arrow_left_disabled.png"/>
      <rightbutton normal="scroll_arrow_right_enabled.png" disabled="scroll_arrow_right_disabled.png"/>
      <hbody frame="scroll_body_horizontal.png" slider="scroll_slider_horizontal.png"/>
      <upbutton normal="scroll_arrow_up_enabled.png" disabled="scroll_arrow_up_disabled.png"/>
      <downbutton normal="scroll_arrow_down_enabled.png" disabled="scroll_arrow_down_disabled.png"/>
      <vbody frame="scroll_body_vertical.png" slider="scroll_slider_vertical.png"/>
      <text color="#555555" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="22" bold="true" italic="false" valign="center" halign="center"/>
  </scroll>
  <scroll id="menuscroll-noautohide" base="#menuscroll" autohide="false">
  </scroll>
  <scroll id="progress" base="#menuscroll">
      <hbody frame="cr3_progress_body.png" slider="cr3_progress_slider.png"/>
      <vbody frame="cr3_progress_body.png" slider="cr3_progress_slider.png"/>
  </scroll>
  <window id="dialog">
        <text color="#000000" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="30" bold="true" italic="false" valign="center" halign="center"/>
        <background image="cr3_settings_menu.png" color="#AAAAAA"/>
        <border widths="26,8,8,8"/>
        <!--icon image="filename" valign="" halign=""/-->
        <client>
            <background image="cr3_menu_item.png" color="#FFFFFF"/>
            <background color="#FFFFFF"/>
            <border widths="8,8,8,8"/>
            <text color="#000000" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="32" bold="false" italic="false" valign="center" halign="center"/>
        </client>
        <title>
            <size minvalue="0,48" maxvalue="0,0"/>
            <text color="#000000" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="32" bold="true" italic="false" valign="center" halign="center"/>
            <background color="#AAAAAA"/>
            <border widths="4,4,4,4"/>
            <!--icon image="filename" valign="" halign=""-->
        </title>
    <scroll base="#titlescroll"/>
  </window>
  <window id="toc" base="#main">
        <client>
            <text color="#000000" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="24" bold="false" italic="false" valign="center" halign="left"/>
            <background image="cr3_menu_item.png" color="#FFFFFF"/>
            <border widths="5,9,5,9"/>
        </client>
        <input size="30%,70%" pos="68%,21%">
            <border widths="4,4,4,4"/>
            <background color="#FFFFFF"/>
            <text color="#000000" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="24" bold="false" italic="false" valign="center" halign="left"/>
        </input>
        <value>
            <border widths="8,4,8,4"/>
            <text color="#000000" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="24" bold="true" italic="false" valign="center" halign="right"/>
        </value>
        <item>
            <border widths="8,4,8,4"/>
            <text color="#000000" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="24" bold="true" italic="false" valign="center" halign="left"/>
        </item>
        <selitem>
            <border widths="8,4,8,4"/>
            <background color="#AAAAAA"/>
            <text color="#000000" face="Arial Narrow, Arial, DejaVu Sans Condensed, DejaVu Sans" size="24" bold="true" italic="false" valign="center" halign="left"/>
        </selitem>
        <status base="#menu-status">
            <text color="#000000" face="Arial, DejaVu Sans" size="20" bold="true" italic="false" valign="center" halign="right" wordwrap="true"/>
        </status>
        <scroll base="#titlescroll"/>
  </window>
  <menu id="vkeyboard" base="#toc">
